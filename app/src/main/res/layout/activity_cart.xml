<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fashion.ui.cart">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/layer25"
        android:layout_marginTop="10dp"
        android:onClick="back"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="CART"
        android:textColor="@color/darkgray"
        android:textSize="20dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/layer13"
        android:layout_marginTop="12dp"
android:onClick="web"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content" />

</LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/purewhite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="5dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/l33"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="steam"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="2dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"

                android:layout_marginTop="10dp"
                android:text="single Vision Lenses $64"
                android:textColor="@color/darkgray"
                android:textSize="10dp"
                android:layout_marginLeft="130dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:background="@drawable/l88"

                android:layout_marginTop="25dp"
                android:layout_marginLeft="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/purewhite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="5dp"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/layer34"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="slash"
            android:textColor="@color/black"
            android:textSize="15dp"

            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="2dp"
            android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_marginTop="10dp"
            android:text="single Vision Lenses $53"
            android:textColor="@color/darkgray"
            android:textSize="10dp"
            android:layout_marginLeft="130dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/l88"

            android:layout_marginTop="25dp"
            android:layout_marginLeft="90dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        android:background="@color/purewhite"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"

            android:layout_marginRight="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Subtotal"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"

                android:layout_marginTop="10dp"
                android:text="$117"
                android:textColor="@color/black"
                android:textSize="20dp"
               android:layout_marginLeft="90dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"

                android:layout_marginTop="5dp"
                android:text="APPLY COUPON"
                android:textColor="@color/darkgray"
                android:textSize="10dp"
                android:layout_marginLeft="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"

            android:layout_marginTop="10dp"
            android:text="Shipping Charges $0"
            android:textColor="@color/darkgray"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="140dp"
android:background="@drawable/gradient"
                android:layout_marginTop="10dp"
                android:text="CHECKOUT"
android:onClick="eye"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_height="30dp" />
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="140dp"
                android:layout_marginTop="10dp"


                android:background="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/purewhite"
                    android:layout_marginRight="3dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_marginTop="5dp"
                        android:text="BUY WITH"
                        android:textColor="@color/darkgray"
                        android:textSize="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@drawable/la"

                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_marginTop="5dp"
                        android:text="PAY"
                        android:textColor="@color/darkgray"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>