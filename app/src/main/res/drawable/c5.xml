<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!-- Larger blue circle in back -->
    <item
        >
        <shape android:shape="oval">
            <solid android:color="#a7a2a2"/>
            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item
        >
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="1dp"/>
            <solid android:color="#ffffff"/>
            <size
                android:width="25dp"
                android:height="25dp"/>
        </shape>
    </item>


    <item
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        android:left="5dp"
        >
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="1dp"/>
            <solid android:color="#dad9d9"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</layer-list>